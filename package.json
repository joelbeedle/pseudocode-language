{
    "name": "pseudocode-language-support",
    "displayName": "Pseudocode Language Support",
    "description": "Syntax Highlighting for Pseudocode",
    "publisher": "JoelBeedle",
    "version": "1.4.0",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "pseudo",
                "aliases": [
                    "Pseudocode",
                    "pseudo"
                ],
                "extensions": [
                    ".pseudo"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pseudo",
                "scopeName": "source.pseudo",
                "path": "./syntaxes/pseudo.tmLanguage.json"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/joelbeedle/pseudocode-vscode.git"
    }
}
