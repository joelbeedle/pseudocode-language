{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pseudocode",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#function"
		},
		{
			"include": "types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.pseudo",
					"match": "\\b(if|while|for|return|then|do|end|endif|endfor|endwhile|else|not|foreach|endforeach|allocate)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pseudo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pseudo",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.pseudo",
			"match": "[0-9]+|\\b(inf|infinity|none|null|None|True|False|true|false|TRUE|FALSE)"
		},
		"function": {
			"patterns": [
				{
					"match": "\\b(Function|Procecure|function|procedure|func|proc)\\s([[:alpha:]]+)\\(",
					"captures": {
						"1": {
							"name": "entity.name.function.pseudo"
						},
						"2": {
							"name": "storage.type.pseudo"
						},
						"3": {
							"name": "entity.name.method.pseudo"
						}
					}
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type.pseudo",
					"match": "\\b(int|Int|Integer|String|string|str|tuple|Tuple|Array|array|List|list|dictionary|Dictionary|dict|Dict|double|long|float)\\b"

				}
			]
		}
	},
	"scopeName": "source.pseudo"
}